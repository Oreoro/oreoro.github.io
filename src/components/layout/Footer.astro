---
import { getMenu } from "@/utils";
import { normalizeNavPath } from "@/lib/blog-helpers";
import { siteInfo } from "@/site.config";

const menuLinks = await getMenu();
const currentPath = normalizeNavPath(Astro.url.pathname);
---

<footer class="site-footer" id="main-footer">
	<div class="footer-container">
		<nav aria-label="Footer navigation" class="footer-nav">
			{
				menuLinks.map((link, index) => (
					<>
						<a
							href={link.path}
							class={`footer-link ${currentPath === normalizeNavPath(link.path) ? 'active' : ''}`}
							aria-current={currentPath === normalizeNavPath(link.path) ? "page" : false}
						>
							{link.title}
						</a>
						{index < menuLinks.length - 1 && (
							<span class="footer-separator" aria-hidden="true">|</span>
						)}
					</>
				))
			}
		</nav>
		<div class="footer-copyright">
			Â© {new Date().getFullYear()} {siteInfo.title}
		</div>
	</div>
</footer>

<style>
	.site-footer {
		border-top: 1px solid var(--color-border);
		padding: 2rem 0;
		margin-top: 3rem;
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		text-align: center;
	}

	.footer-nav {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		flex-wrap: wrap;
		margin-bottom: 1rem;
	}

	.footer-link {
		text-decoration: none;
		color: var(--color-text);
		font-size: 0.875rem;
		padding: 0.25rem 0.5rem;
	}

	.footer-link:hover {
		color: var(--color-accent);
	}

	.footer-link.active {
		color: var(--color-accent);
	}

	.footer-separator {
		color: var(--color-quote);
	}

	.footer-copyright {
		font-size: 0.875rem;
		color: var(--color-quote);
		margin-top: 1rem;
	}
</style>
